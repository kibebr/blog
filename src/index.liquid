  <script>
    {% capture additional %}
      const strives = [{
        content: 'write quality code.',
        color: 'text-red-dark'
      }, {
        content: 'develop accessible software.',
        color: 'text-blue-dark'
      }, {
        content: 'consider performance.',
        color: 'text-yellow-dark'
      }]
      const strivesPlaceholder = document.getElementById('strives-placeholder')
      const accordions = document.querySelectorAll('.accordion')

      accordions.forEach(a => {
        const content = a.nextElementSibling
        const button = a.children[2] || a.children[1]

        a.onclick = () => {
          const isAlreadyOpen = content.classList.contains('open')
          a.setAttribute('aria-expanded', !isAlreadyOpen)
          content.setAttribute('aria-hidden', isAlreadyOpen)
          content.classList.toggle('open')
          content.classList.toggle('h-auto')
          content.classList.toggle('max-h-96')
          content.classList.toggle('opacity-0')
          content.classList.toggle('mt-3')

          if (a.classList.contains('faq-accordion')) {
            button.classList.toggle('rotate-45')
          } else {
            button.classList.toggle('-rotate-90')
          }
        }
      })

      const setStrive = (strive) => {
        strivesPlaceholder.textContent = strive.content
        strivesPlaceholder.className = strive.color
      }

      setStrive(strives[0])
      let i = 1
      setInterval(() => {
        setStrive(strives[i])

        i += 1

        if (i >= strives.length) {
          i = 0
        }
      }, 2000)
    {% endcapture %}

