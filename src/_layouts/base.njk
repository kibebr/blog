{% set js %}
  {% include 'src/_assets/scripts/dark-mode.js' %}
  {% include 'src/_assets/scripts/tab-mouse-detect.js' %}
{% endset %}

<!DOCTYPE html>
<html lang="en">
  <head>
    {% include "head.njk" %}
    {% if site.env %}
      <!-- capture the CSS content as a Liquid variable -->
      {% set css %}{% include "app.compiled.css" %}{% endset %}
      <style> 
        {{ css | safe }}
      </style>
    {% else %}
    <link rel="stylesheet" href="/static/app.compiled.css">
    {% endif %}
  </head>
  <body>
    <a href="#main" class="skip-link">Skip to main content</a>
    {{ content | safe }}
  </body>
  <script>
    {{ js | jsmin | safe }}
  </script>
</html>
